#include<iostream>
#include<stdlib>
using namespace std;
int main() 
{
  int n1,n2,rslt,ch;
  rslt=0;
  do
  {
     cout<<"\nEnter 2 integers:";
     cin>>n1,n2;
     cout<<"\nSelect choice of operation\n1. Addition\n2. Subtraction\n3. Multiplication\n4. Division\n5. Exit";
     cin>>ch;
     switch(ch) 
     {
        case 1:
               rslt=n1+n2;
               break;
        case 2:
               rslt=n1-n2;
               break;
        case 3:
               rslt=n1*n2;
               break;
        case 4:
               rslt=n1/n2;
               break;
        case 5:
               exit(0);
        default:
                cout<<"\nPlease select a valid choice";
     } 
     cout<<"\nResult="<<rslt;
   }while(ch!=5)
   return 0;
}

        
